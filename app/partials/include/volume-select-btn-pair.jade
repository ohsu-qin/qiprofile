//
  If the image state is 'loaded', then the image selector is a
  button which opens the image. Otherwise, the image selector
  is a button which loads the image. If the image state is 'not
  found', then the image selector is a button that displays an
  exclamation mark.

button.btn.btn-default.btn-xs.qi-nav-btn.qi-vol-btn(
  ng-show="image.isNotFound()"
)
  .glyphicon.glyphicon-exclamation-sign

button.btn.btn-default.btn-xs.qi-nav-btn.qi-vol-btn(
  ng-click='openImage()'
  ng-show="image.isLoaded()"
)
  .glyphicon.glyphicon-eye-open

button.btn.btn-default.btn-xs.qi-nav-btn.qi-vol-btn(
  ng-click='image.load()'
  ng-hide="image.isLoaded() || image.isNotFound()"
  ng-disabled="image.isLoading()"
  qi-spin="image.isLoading()"
)
  .glyphicon.glyphicon-download
