extends ../layout/partial

block billboard
  | {{ name }} Collection

block content
  .row
    .col-md-2.qi-align-top
      div(
        qi-scatter-plot, [height]="sessionsChartHeight",
        [data]="sessions", [axis]="axis", [color]="'subject.number'",
        [x]="'day'", [y]="'subject.number'"
      )
    .col-md-10
      // Double up the correlation charts.
      .col-md-6(
        *ngFor="let correlation of correlations",
        qi-scatter-plot, [data]="sessions", [axis]="axis",
        [color]="'subject.number'",
        [x]="correlation.x", [y]="correlation.y"
      )
