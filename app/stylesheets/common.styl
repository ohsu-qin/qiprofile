//**  The general-purpose styles. **//

@require 'helpers'

.qi-label
  font-weight: bold

.qi-x-smaller
  font-size 75%

.qi-text-right
    text-align: right

.qi-date, .qi-number
  text-align center

.qi-pct
  padding-right 2em
  text-align right

// See the clean-list helper for a description.
ul.qi-clean-list
  clean-list()

.qi-close-icon
  text-align right

.qi-transparent
  background: transparent

.qi-separator-faint
  border 1px solid Lavender

// The standard data table style.
.qi-table
  & table, th, td
    // Cells have a thin light brown border.
    border 1px solid BurlyWood
  & th
    // The table headings are bold against a background.
    background-color Bisque
    font-weight bold
    text-align center
    white-space nowrap
  & td
    // The table data cell has slight vertical padding.
    // Horizontal formatting is the page responsibility.
    padding-top 0.2em
    padding-bottom 0.2em

  & colgroup
    // A column group is delineated by a thin silver line.
    border-left 0.2em solid Silver
  