// Previous value.
button.btn.btn-primary.btn-sm.qi-btn(
  type='button', (click)="onPrevious()"
)
  i.fa.fa-step-backward

// Cycle over the values.
button.btn.btn-primary.btn-sm.qi-btn(
  type='button', (click)="togglePlay()"
)
  i.fa.fa-play(*ngIf="!isPlaying")
  i.fa.fa-pause(*ngIf="isPlaying")

// Next value.
button.btn.btn-primary.btn-sm.qi-btn(
  type='button', (click)="onNext()"
)
  i.fa.fa-step-forward
