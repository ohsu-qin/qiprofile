div(*ngIf="hasContent()")
  // The optional table title.
  span.qi-table-title(*ngIf="title") {{ title }}

  // The table of simple values, e.g. numbers and strings.
  table.table.qi-table.qi-vertical-space
    tr(*ngFor="let key of simpleKeys")
      th {{ getLabel(key) }}
      td {{ getDisplayValue(key) }}

  // The nested tables.
  .qi-vertical-space(*ngFor="let key of compositeKeys")
    qi-property-table(
      *ngFor="let child of children(key)",
      [object]="child", [parent]="object", [label]="label",
      [title]="getLabel(key)"
    )
