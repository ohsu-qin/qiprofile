span.qi-table-title Normalized Assay

.qi-panel.qi-nested
  table.table.qi-table.qi-spaced-table(
    *ngIf="has(tumor.geneticExpression.normalizedAssay.recurrenceScore)"
  )
    tr
      th Recurrence Score
      td {{ tumor.geneticExpression.normalizedAssay.recurrenceScore }}
      td.qi-transparent
        button.btn.qi-btn.qi-minihelp-btn(
          (click)="openRecurrenceScoreHelp()"
        )
          i.fa.fa-question-circle

  qi-property-table(
    [object]="tumor.geneticExpression.normalizedAssay",
    [path]="'subject.biopsy.pathology.tumors[0].geneticExpression.normalizedAssay'",
    [exclude]="recurrenceScore", [label]="label"
  )
