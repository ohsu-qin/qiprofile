// TODO - shouldn't the divs be inside the uib-accordion-group?
//
// The slice controls are organized into accordion groups.
.qi-panel.qi-slice-display-ctrl
  uib-accordion(close-others='false')
    div(ng-controller='AccordionGroupCtrl')
      uib-accordion-group(is-open="isOpen")
        +accordion-heading('Orientation')
        // The orientation control.
        .row
          div.btn-group
            label.btn.qi-btn.qi-btn-radio(
              ng-repeat="dim in dimensions"
              ng-model="dimension"
              uib-btn-radio="'{{ dim }}'"
            ) {{ dim }}
        .row.qi-orient-ctrl
          .col-md-1.btn.btn-med.qi-profile-btn.qi-step-btn(
              ng-click="slice.sliceNbr = slice.sliceNbr - 1"
            ).glyphicon.glyphicon-step-backward
          .col-md-9
            slider.qi-slider(
                ng-model="slice.sliceNbr" floor='1' ceiling='12' step='1'
              )
          .col-md-1.btn.btn-med.qi-profile-btn.qi-step-btn(
              ng-click="slice.sliceNbr = slice.sliceNbr + 1"
            ).glyphicon.glyphicon-step-forward
    div(ng-controller='AccordionGroupCtrl')
      uib-accordion-group(is-open="isOpen")
        +accordion-heading('Time Point')
        // The time point control.
        .row.qi-orient-ctrl
          .col-md-1.btn.btn-med.qi-profile-btn.qi-step-btn(
              ng-click="volume.volumeNbr = volume.volumeNbr - 1"
            ).glyphicon.glyphicon-step-backward
          .col-md-9
            slider.qi-slider(
                ng-model="volume.volumeNbr" floor='1' ceiling='40' step='1'
              )
          .col-md-1.btn.btn-med.qi-profile-btn.qi-step-btn(
              ng-click="volume.volumeNbr = volume.volumeNbr + 1"
            ).glyphicon.glyphicon-step-forward
