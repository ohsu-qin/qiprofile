// The tumor site and histology.
table.table.qi-table.qi-spaced-table.qi-vertical-space
  tr(ng-show='tumor.location != null')
    th Site
    td {{ tumor.location | sarcomaTumorLocation }}

  tr(ng-show='tumor.histology != null')
    th Histology
    td {{ tumor.histology }}

// The tumor extent partial.
.qi-vertical-space(ng-show='tumor.extent != null')
  include tumor-extent

// The TNM partial.
.qi-vertical-space(ng-show='tumor.tnm != null')
  include tnm

// The necrosis percent partial.
.qi-vertical-space(ng-show='tumor.necrosis_percent != null')
  include necrosis-percent
