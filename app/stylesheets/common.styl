//**  The general-purpose styles. **//

@require 'helpers'

.qi-label
  font-weight: bold

.qi-x-smaller
  font-size 75%

.qi-text-right
    text-align: right

.qi-date, .qi-number
  text-align center

.qi-pct
  padding-right 2em
  text-align right

// See the clean-list helper for a description.
ul.qi-clean-list
  clean-list()

.qi-close-icon
  text-align right

.qi-transparent
  background: transparent

.qi-separator-faint
  border 1px solid Lavender

.qi-top-buffer
  // Make some room at the top.
  margin-top 0.5em

.qi-left-buffer
  // Make some room on the left.
  margin-left 0.5em

.qi-right-buffer
  // Make some room on the right.
  margin-right 0.5em

.qi-bottom-buffer
  // Make some room at the bottom.
  margin-bottom 0.5em

.qi-inline-heading
  display inline-block

.qi-btn-select
  color Peru
  &:hover
    color Chocolate
    cursor pointer
  &:focus, &.active
    border 1px solid Peru
    color White
    background Chocolate
