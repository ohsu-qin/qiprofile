// This imaging profile partial displays the timeline,
// session numbers, preview images and modeling results.

span.qi-panel-title Imaging Profile

ngb-accordion(
  #acc='ngbAccordion',
  activeIds='timeline, sessions, modeling',
  (panelChange)="onPanelChange($event)"
)
  ngb-panel#timeline
    template(ngbPanelTitle)
      span Patient Timeline
      i.fa.fa-caret-up.qi-smaller(
        *ngIf="isPanelOpen('timeline')"
      )
      i.fa.fa-caret-down.qi-smaller(
        *ngIf="!isPanelOpen('timeline')"
      )
    template(ngbPanelContent)
      include timeline

  ngb-panel#sessions
    template(ngbPanelTitle)
      span Imaging Visits
      i.fa.fa-caret-up.qi-smaller(
        *ngIf="isPanelOpen('sessions')"
      )
      i.fa.fa-caret-down.qi-smaller(
        *ngIf="!isPanelOpen('sessions')"
      )
    template(ngbPanelContent)
      include previews

  ngb-panel#modeling
    template(ngbPanelTitle)
      span Pharmacokinetic Modeling
      i.fa.fa-caret-up.qi-smaller(
        *ngIf="isPanelOpen('modeling')"
      )
      i.fa.fa-caret-down.qi-smaller(
        *ngIf="!isPanelOpen('modeling')"
      )
    template(ngbPanelContent)
      include modelings
