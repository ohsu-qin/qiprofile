extends ../layout/partial

block billboard
  | {{ collection }} Profile

block content
  // TODO - wrap these charts in a panel?
  div.qi-correlation-charts(qi-correlation-charts)
    .row
      .col-md-6
        .col-md-12.dropdown
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[0].xLabel }}
            span.caret
          span vs.
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[0].yLabel }}
            span.caret
        .col-md-12.qi-correlation-chart(id="qi-correlation-chart-0")
      .col-md-6
        .col-md-12.dropdown
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[1].xLabel }}
            span.caret
          span vs.
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[1].yLabel }}
            span.caret
        .col-md-12.qi-correlation-chart(id="qi-correlation-chart-1")
      .col-md-6
        .col-md-12.dropdown
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[2].xLabel }}
            span.caret
          span vs.
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[2].yLabel }}
            span.caret
        .col-md-12.qi-correlation-chart(id="qi-correlation-chart-2")
      .col-md-6
        .col-md-12.dropdown
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[3].xLabel }}
            span.caret
          span vs.
          button.btn.btn-default
            span.qi-dropdown-selected {{ axes[3].yLabel }}
            span.caret
        .col-md-12.qi-correlation-chart(id="qi-correlation-chart-3")

block help-text
  // The nested quote ensures evaluation to a string rather than
  // a scope variable.
  .qi-help-text(ng-include="'/partials/help/subject-list.html'")
