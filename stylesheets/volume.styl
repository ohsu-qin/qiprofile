// Full height 60% width centered with a light background. The
// background is adapted from
// http://stackoverflow.com/questions/14628601/can-i-add-background-color-only-for-padding.
.qi-papaya-parent
  height 100%
  padding 0 20% 0 20%
  background-image linear-gradient(#000, #000), linear-gradient(Lavender, Lavender)
  background-clip content-box, padding-box

// The default papaya style has a nearly invisible menu when papaya is embedded.
// Override with a better text color.
.papaya-menu-label
  color: CadetBlue

.papaya-toolbar
  background-color MintCream
  // Clobber the File menu item.
  & #File
    display none

.papaya-display
  background-color MintCream

// Because Papaya positions absolutely based on calculated dimensions,
// the choosers must also be absolute.
.qi-volume-chooser
  position absolute
  left 0
  top 0
  margin 8% 5% 5% 10%
  padding 1em
  height 70%
  display inline-block
  color DarkCyan
  & qi-player button
    // The slider handle .row has a -15px margin.
    // Compensate for the button by shifting it
    // to the left 20px. For some reason, it needs
    // to be 20 rather than 15.
    margin-left -20px

.qi-volume-slider
  margin-top 0.5em
  height 90%

.qi-volume-chooser-heading
  position absolute
  left 0
  margin 1em 5% 5% 10%
  color DarkCyan

