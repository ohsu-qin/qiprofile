//** The Collection List and Detail page styles. **//

.qi-collection-name
  font-size larger

.qi-correlation-charts
  margin-top 0.8em

.qi-dropbtn
  width 16em
  margin-bottom 0.2em
  border none
  border-radius 0.4em
  padding 0.2em 0.4em
  font-size smaller
  color white
  text-align left
  background-color Teal
  z-index 1

.qi-dropdown
  position relative
  display inline-block
  &:hover
    cursor pointer
    .qi-dropdown-content
      display block
    .qi-dropbtn
      background-color SeaGreen

.qi-dropdown-content
  display none
  position absolute
  height 25em
  overflow-y scroll
  min-width 16em
  border-radius .4em
  font-size smaller
  background-color GhostWhite
  box-shadow 0em 0.8em 1.6em 0em rgba(0,0,0,0.2)
  z-index 2
  .qi-dropdown-choice
    display block
    padding 0.2em 0.4em
    color black
    text-decoration none
    &:hover
      background-color OldLace
      .qi-check-hide
        color OldLace

.qi-dropdown-icon
  margin-right 0.8em
  border-radius .6em
  padding 0.1em 0.4em
  font-size smaller
  &.qi-xy
    color Teal
    background-color SeaShell
  &.qi-check-hide
    color GhostWhite
  &.qi-check-show
    color Teal

.qi-caret
  margin 0.5em 0.4em 0em 0em
  float right

.qi-axis-dropdowns
  margin-bottom 0.5em


/* Corellation chart tooltips. */

div.tooltip
  text-align left
  padding 5px
  font 14px sans-serif
  background rgba(0, 0, 0, 0.8)
  color #fff
  border 0px
  border-radius 8px
  pointer-events none
