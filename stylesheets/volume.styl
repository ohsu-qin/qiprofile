// Because Papaya positions absolutely based on calculated dimensions,
// the choosers must also be absolute.

.qi-volume-chooser-left
  position absolute
  top 0
  left 0
  // Move the left chooser closer to the image display.
  margin-left 10%

.qi-volume-chooser-right
  position absolute
  top 0
  right 0
  // Move the right chooser closer to the image display.
  margin-right 10%
