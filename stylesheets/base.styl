//** The base CSS style overrides. **//

@require 'helpers'

body
  margin 1em
  font-family 'Open Sans', sans-serif

code
  color DarkMagenta

a
  hyperlink()

// Override the bootstrap panel heading background color.
.card > .card-header
  background-color MintCream

// Override the Bootstrap panel style.
.card
  // Remove the superfluous bottom margin.
  margin-bottom 0
  // Override the panel heading background color.
  & > .card-header
    background-color MintCream
  & > .card-block
    background-color Azure
  // Add a thin border to a nested card.
  & .card
    border-top: 1px solid SlateGray
  // Add a thin border to separate cards.
  & .card + .card
    border-top: 1px solid SlateGray
    margin-top: 0

// Override the Bootstrap accordion style.
ngb-accordion .card
  // Eliminate the Bootstrap accordion block padding to
  // work around the following Angular Bootstrap bug:
  // * Angular Bootstrap silently drops user-defined
  //   accordion panel CSS classes on the floor. There
  //   is thus no mechanism to selectively set the CSS,
  //   e.g. the background color, on an accordion panel.
  //   The work-around is to unset the default padding
  //   on every card block and reset it within the
  //   transcluded accordion ngbPanelContent template
  //   HTML.
  // Every ngbPanelContent template should have a parent
  // .qi-panel container, which can optionally be modified
  // by additional CSS styles to, e.g., set the background
  // color.
  & > .card-block
    padding 0

// Override the bootstrap button to change the left
// margin from the odd setting -1px to 0.5em.
.btn-group
  .btn + .btn
    margin-left 0.5em

// Change the SVG hyperlink cursor to a pointer.
svg
  a
    cursor pointer
    pointer-events all

hr
  display none

