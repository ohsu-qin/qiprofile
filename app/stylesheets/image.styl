//**  The Image Display styles. **//

.qi-series-image
  margin-top 3em
  height 44em

.qi-overlay-select
  position absolute
  top 8em
  left 1.1em
  & button
    width 7em
    padding 0.2em
    border 1px solid Peru
    margin 0em 0em 0.2em 0em
    color Black
    background OldLace
    &:hover
      border 1px solid Peru
      color Black
      background Chocolate
    &:focus, &.active
      border 1px solid Peru
      color White
      background Chocolate

