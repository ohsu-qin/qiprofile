.qi-radio-row
  display inline-block
  & span, .col
    float left
    display block
  & span
    margin 2px 0.5em 0 0
  & label
    padding 2px 2px 0 0
  & input[type=radio], input.radio
    margin 2px 0 0 2px
  & .col + .col
    margin-left 2em

.qi-inset-title
  color Indigo

.qi-panel
  border 1px solid SlateGray
  border-radius: 0.4em 0.4em 0.4em 0.4em

.qi-nested
  padding 0.5em

// The standard data table style.
.qi-table
  // Fill out small tables.
  min-width 80%
  & table, th, td
    // Cells have a thin light brown border.
    border 1px solid BurlyWood
  & th
    // The table headings are bold against a background.
    background-color Bisque
    font-weight bold
    text-align center
    white-space nowrap
  & td
    // The table data cell has slight vertical padding.
    // Horizontal formatting is the page responsibility.
    padding-top 0.2em
    padding-bottom 0.2em
  & colgroup
    // A column group is delineated by a thin silver line.
    border-left 0.2em solid Silver

.qi-spaced-table
  // Space adjacent rows.
  border 0
  border-collapse separate
  border-spacing 0 0.5em

.qi-subtable-title
  font-size larger
  font-style italic
  margin-left 0.5 em
